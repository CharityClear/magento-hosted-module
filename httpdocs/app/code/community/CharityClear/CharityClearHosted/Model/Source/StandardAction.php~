class Charityclear_CharityclearHosted_Model_Source_StandardAction {
    
    public function toOptionArray() {
        
        return array(
            array('value' => Charityclear_CharityclearHosted_Model_Standard::PAYMENT_TYPE_SALE, 'label' => Mage::helper('CharityclearHosted')->__('Sale')),
            array('value' => Charityclear_CharityclearHosted_Model_Standard::PAYMENT_TYPE_AUTH, 'label' => Mage::helper('CharityclearHosted')->__('Pre-Auth')),
        );
        
    }
    
}